@model List<Property>
@{
    int delay = 100;
}
<section class="ftco-section bg-light">
    <div class="container-xl">
        <div class="row justify-content-center">
            <div class="col-md-8 heading-section text-center mb-5" data-aos="fade-up" data-aos-duration="1000">
                <span class="subheading">Our Properties</span>
                <h2 class="mb-4">Featured Properties</h2>
            </div>
        </div>
        <div class="row">
         @foreach(var pr in Model){
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="@delay" data-aos-duration="1000">
                <div class="property-wrap">
                    <a href="#" class="img img-property" style="background-image: url(@pr.PropertyImages.ImageUrl);">
                        <p class="price"><span class="orig-price">@pr.Price<small> / mo</small></span></p>
                    </a>
                    <div class="text">
                        <div class="list-team d-flex align-items-center mb-4">
                            <div class="d-flex align-items-center">
                                <div class="img" style="background-image:url(@pr.Agent.ProfileImage)"></div>
                                    <h3 class="ml-2">@pr.Agent.FirstName @pr.Agent.LastName</h3>
                            </div>
                            <span class="text-right">@pr.ConstructionDate</span>
                        </div>
                        <h3><a href="#">@pr.Name</a></h3>
                        <span class="location"><i class="ion-ios-pin"></i> @pr.City <span class="rent">@pr.PropertyCategory.Name</span></span>
                        <ul class="property_list mt-3 mb-0">
                            <li><span class="flaticon-bed"></span>@pr.BathroomCount</li>
                            <li><span class="flaticon-bathtub"></span>@pr.RoomCount</li>
                            <li><span class="flaticon-blueprint"></span>1,878 sqft</li>
                        </ul>
                    </div>
                </div>
                </div>
                delay = delay + 100;
            }
        </div>
    </div>
</section>