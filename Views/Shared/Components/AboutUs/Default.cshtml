@model AboutUsStatisticViewModel
<section class="ftco-section ftco-about-section">
    <div class="container-xl">
        <div class="row g-xl-5">
            <div class="col-md-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000">
                <div class="img w-100" style="background-image: url(@Model.AboutUsData.ImageUrlRight);"></div>
            </div>
            <div class="col-md-8 heading-section" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
                <span class="subheading">Hakkımızda</span>
                <h2 class="mb-4">@Model.AboutUsData.Title</h2>
                <p>@Model.AboutUsData.Description</p>
                <div class="row py-5">
                    <div class="col-md-6 col-lg-3">
                        <div class="counter-wrap" data-aos="fade-up" data-aos-duration="1000">
                            <div class="text">
                                <span class="d-block number gradient-text"><span id="count1" class="counter" data-count="50">0</span></span>
                                <p>Deneyim Yılı</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="counter-wrap" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000">
                            <div class="text">
                                <span class="d-block number gradient-text"><span id="count2" class="counter" data-count="@Model.TotalProperties">0</span>K+</span>
                                <p>Toplam Emlak</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="counter-wrap" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
                            <div class="text">
                                <span class="d-block number gradient-text"><span id="count2" class="counter" data-count="@Model.QualifiedRealtors">0</span></span>
                                <p>Nitelikli Emlakçı</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="counter-wrap" data-aos="fade-up" data-aos-delay="300" data-aos-duration="1000">
                            <div class="text">
                                <span class="d-block number gradient-text"><span id="count2" class="counter" data-count="100">0</span></span>
                                <p>Toplam Şube</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="img img-2" style="background-image: url(@Model.AboutUsData.ImageUrlLeft);" data-aos="fade-up" data-aos-delay="400" data-aos-duration="1000">
                </div>
            </div>
        </div>
    </div>
</section>
